<UserControl x:Class="CustomIDE.BetterTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomIDE"
             mc:Ignorable="d"
             TextOptions.TextFormattingMode="Display">
    <ScrollViewer>

        <Grid x:Name="MainGrid" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="LinesBox" Text="1" FontFamily="Cascadia Code" Background="#FF2B2B2B" Foreground="#FF5D5D5D" FontSize="14"/>
            <TextBox x:Name="MainTextBox" Grid.Column="1" Background="#FF2B2B2B" FontFamily="Cascadia Code" TextChanged="TextChange" AcceptsTab="True" AcceptsReturn="True" FontSize="14" PreviewKeyDown="TextBox_KeyDown" PreviewTextInput="Box_PreviewTextInput" BorderThickness="0,0,0,0" Padding="1,1,1,1" LostFocus="MainTextBox_LostFocus" Foreground="Red"/>
            <Grid x:Name="TextGrid" Grid.Column="1"/>
        </Grid>
    </ScrollViewer>

</UserControl>
